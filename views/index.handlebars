<h1>Burgers</h1>

<h2>Burgers Ready to Devour!</h2>

<ul>
  {{#each burger}}
    {{!-- {{#unless this.x}} --}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">DEVOURED!</button>
        </form>

        {{!-- {{> cats/delete-cat}} --}}
      </li>
    {{!-- {{/unless}} --}}
  {{/each}}
</ul>

<h2>Add a New Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
